{
  "name": "tdd-sandbox-typescript",
  "version": "0.1.0",
  "private": true,
  "author": "adam.szi",
  "license": "BEERWARE",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && yarn tsc --project tsconfig.build.json",
    "preserve": "yarn build",
    "serve": "concurrently \"yarn tsc --watch\" \"nodemon -q dist/index.js\"",
    "prestart": "yarn build",
    "start": "node dist/index.js",
    "test": "jest",
    "test:w": "jest --watchAll",
    "test:v": "jest --verbose"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv-safe": "^8.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3"
  },
  "devDependencies": {
    "@types/node": "^16.11.9",
    "@types/jest": "^27.4.1",
    "concurrently": "^6.4.0",
    "nodemon": "^2.0.15",
    "jest-extended": "^2.0.0",
    "jest": "^27.0.0",
    "ts-jest": "^27.1.4"
  }
}
