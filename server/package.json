{
  "name": "tdd-sandbox-server",
  "version": "0.1.0",
  "private": true,
  "author": "adam.szi",
  "license": "BEERWARE",
  "main": "build/index.js",
  "scripts": {
    "build": "rimraf build && tsc --project tsconfig.build.json",
    "serve": "cross-env NODE_ENV=development concurrently \"tsc --project tsconfig.build.json --watch\" \"nodemon -q build/index.js\"",
    "serve:test": "cross-env NODE_ENV=test concurrently \"tsc --project tsconfig.build.json --watch\" \"nodemon -q build/index.js\"",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "test": "jest",
    "test:c": "jest --collect-coverage",
    "test:w": "jest --watchAll",
    "test:v": "jest --verbose",
    "format": "prettier --config .prettierrc.json --write src/**/*.ts",
    "dev": "cross-env NODE_ENV=development concurrently \"tsc --project tsconfig.build.json --watch\" \"nodemon -q build/index.js\""
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "express-validator": "^6.14.0",
    "helmet": "^4.6.0",
    "i18next": "^21.7.1",
    "i18next-fs-backend": "^1.1.4",
    "i18next-http-middleware": "^3.2.0",
    "jsonwebtoken": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "sequelize": "^6.19.0",
    "socket.io": "^4.5.1",
    "sqlite3": "^5.0.6",
    "typescript": "^4.6.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/i18next": "^13.0.0",
    "@types/i18next-fs-backend": "^1.1.2",
    "@types/jest": "^27.4.1",
    "@types/jest-polyfill": "*",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^16.11.9",
    "@types/supertest": "^2.0.12",
    "@types/tdd-sandbox-shared": "*",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "concurrently": "^6.4.0",
    "eslint": "^8.14.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^27.0.0",
    "jest-extended": "^2.0.0",
    "jest-polyfill": "*",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.3",
    "ts-jest": "^27.1.4"
  }
}
